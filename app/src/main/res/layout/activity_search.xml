<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnBackFromSearch"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:backgroundTint="@color/YP_White"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_back_arrow_24"
            app:iconGravity="textStart"
            app:iconPadding="5dp"
            app:iconTint="@color/textColor_activity_settings" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/search"
            android:textColor="@color/textColor_activity_settings"
            android:textSize="22sp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/searchFieldContainer"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/searchInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_edittext"
            android:drawableStart="@drawable/search_icon"
            android:drawablePadding="8dp"
            android:drawableTint="@color/text_edit_fields"
            android:ems="10"
            android:fontFamily="@font/ys_display_regular"
            android:hint="@string/search"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="12dp"
            android:paddingEnd="40dp"
            android:textColorHint="@color/text_edit_fields"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:textSize="16sp"
            android:textColor="@color/text_edit_text_color" />

        <ImageButton
            android:id="@+id/btnClearInput"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_gravity="end|center_vertical"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_close_16"
            app:tint="@color/text_edit_close_button" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>