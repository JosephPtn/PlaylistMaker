<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActMainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/YP_White</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textSize">22sp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/YP_Black</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="ActSettingsTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/textColor_activity_settings</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="ActSettingsImageViewStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="tint">@color/ImageColor_activity_settings</item>
    </style>
    <style name="recycler_content">
        <item name="android:textColor">@color/recycler_content_color</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- player_fragment-->
    <style name="activity_player_table_text">
        <item name="android:textColor">@color/text_table</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="activity_player_table_value">
        <item name="android:textColor">@color/text_value</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textSize">13sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>


    <style name="MyTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="BottomNavTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.4</item>
        <item name="android:lineHeight">16sp</item>
    </style>

    <style name="text">
        <item name="android:textColorHint">@color/text_input_hint_color</item>
        <item name="android:textColor">@color/text_input_hint_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- FragmentCreatePlaylist -->
    <style name="Widget.CreatePlaylist.TextInputLayout"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="boxCornerRadiusTopStart">6dp</item>
        <item name="boxCornerRadiusTopEnd">6dp</item>
        <item name="boxCornerRadiusBottomStart">6dp</item>
        <item name="boxCornerRadiusBottomEnd">6dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/text_input_box_color</item>
        <item name="hintTextColor">@color/hintTextColor</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="boxBackgroundColor">@color/cardview_track_layout</item>

    </style>

    <style name="BottomSheetRoundedShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>
    <style name="RoundedBottomSheetStyle"
        parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/BottomSheetRoundedShape</item>
        <item name="android:backgroundTint">@color/playbackControlColor2</item>

    </style>
    <style name="RoundedBottomSheetDialogTheme"
        parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundedBottomSheetStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>




</resources>